<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:application-servlet2.xml</param-value>
  </context-param>
  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>classpath:log4j.properties</param-value>
  </context-param>
  <context-param>
    <param-name>log4jRefreshInterval</param-name>
    <param-value>60000</param-value>
  </context-param>
  <context-param>
    <param-name>readWebService</param-name>
    <param-value>Start</param-value>
  </context-param>
  <context-param>
    <param-name>readWSInterval</param-name>
    <param-value>1</param-value>
  </context-param>
  <context-param>
    <param-name>webAppRootKey</param-name>
    <param-value>airport.root</param-value>
  </context-param>
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.aero.o2o.web.Listener.WebRootListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>application</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath:spring-mvc.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>WhenServerStarted</servlet-name>
    <servlet-class>com.aero.o2o.web.Listener.WhenServerStarted</servlet-class>
    <load-on-startup>4</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>RSATrade</servlet-name>
    <servlet-class>com.alipay.client.trade.RSATrade</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RSATrade</servlet-name>
    <url-pattern>/servlet/RSATrade</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RSANotifyReceiver</servlet-name>
    <servlet-class>com.alipay.client.notify.RSANotifyReceiver</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RSANotifyReceiver</servlet-name>
    <url-pattern>/servlet/RSANotifyReceiver</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CallBackReceiver</servlet-name>
    <servlet-class>com.alipay.client.callback.RSACallBack</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CallBackReceiver</servlet-name>
    <url-pattern>/servlet/callback</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>application</servlet-name>
    <url-pattern>*.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>application</servlet-name>
    <url-pattern>*.json</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>WhenServerStarted</servlet-name>
    <url-pattern>/WhenServerStarted</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>20</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/common/500.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/common/500.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/common/404.jsp</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/common/403.jsp</location>
  </error-page>
  <login-config>
    <auth-method>BASIC</auth-method>
  </login-config>
  <distributable/>
</web-app>